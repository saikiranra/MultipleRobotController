<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/r_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_gravity="center"
    android:elevation="3dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/RobotNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="Robot Name" />

        <EditText
            android:id="@+id/RobotName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/RobotNameLabel"
            android:layout_alignBaseline="@id/RobotNameLabel"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/RobotIPLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/RobotNameLabel"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:text="IP" />

        <EditText
            android:id="@+id/RobotIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/RobotNameLabel"
            android:layout_alignBaseline="@id/RobotIPLabel"
            android:layout_marginLeft="10dp"

            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/RobotColorLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/RobotIPLabel"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="21dp"
            android:text="Color" />

        <EditText
            android:id="@+id/RobotColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/RobotNameLabel"
            android:layout_alignBaseline="@id/RobotColorLabel"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical" />

    </RelativeLayout>

</android.support.v7.widget.CardView>